{
  "manifest_version": 2,
  "name": "Keep Some Notes",
  "author": "Kasey Kaufmann",
  "description": "A note taking extension that will keep your notes exactly how you want them on any website - Neat and Organized!",
  "version": "1.0.0",
  "homepage_url": "https://www.google.com",
  "icons": {
    "16": "images/post-it.png",
    "48": "images/post-it48.png",
    "128": "images/post-it128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "./options.html",
  "browser_action": {
    "default_icon": "images/post-it128.png",
    "default_title": "Keep Some Notes",
    "default_popup": "popup.html"
  },
  "permissions": ["contextMenus", "tabs", "<all_urls>", "activeTab", "storage"],
  "content_security_policy": "script-src 'self' 'sha256-58CgAS7gfkIMSmxPMc9oyvVld2aRU8B8Kkk1VKfKsWY='; object-src 'self'",
  "web_accessible_resources": ["*.html"]
}
